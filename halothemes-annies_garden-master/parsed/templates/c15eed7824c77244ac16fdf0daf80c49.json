{
  "components/halothemes/halo-product-tab-by-category": "<div class=\"halo-block halo-block-product halo-block-product-tabs padding-top-30 padding-bottom-50\">\n    <div class=\"container\">\n        <div class=\"halo-block-header\">\n            <h3 class=\"title\">{{title}}</h3>\n        </div>\n        <div class=\"productCarousel-tabs\">\n            <ul class=\"tabs\" data-tab role=\"tablist\">\n                {{#each (limit categories theme_settings.home_product_block-id-tab-cate-limit)}}\n                    {{#if @index '==' 0}}\n                        <li class=\"tab is-active\" role=\"presentation\">\n                            <a class=\"tab-title\" href=\"#category_{{id}}\" role=\"tab\" tabindex=\"0\" aria-selected=\"true\" aria-controls=\"category_{{id}}\">\n                                <span>{{name}}</span>\n                            </a>\n                        </li>\n                    {{else}}\n                        <li class=\"tab\" role=\"presentation\">\n                            <a class=\"tab-title\" href=\"#category_{{id}}\" role=\"tab\" tabindex=\"0\" aria-selected=\"false\" aria-controls=\"category_{{id}}\">\n                                <span>{{name}}</span>\n                            </a>\n                        </li>\n                    {{/if}}\n                {{/each}}\n            </ul>\n            <div class=\"tabs-contents\">\n                {{#each (limit categories theme_settings.home_product_block-id-tab-cate-limit)}}\n                    {{#if @index '==' 0}}\n                        <div class=\"tab-content is-active\" id=\"category_{{id}}\" role=\"tabpanel\" aria-hidden=\"true\" data-tab-category-id=\"{{id}}\" data-tab-category-url=\"{{concat url ../../data-sort-tab}}\">\n                            <div class=\"loadingOverlay\"></div>\n                            <div class=\"productCarousel\"></div>\n                        </div>\n                    {{else}}\n                        <div class=\"tab-content\" id=\"category_{{id}}\" role=\"tabpanel\" aria-hidden=\"false\" data-tab-category-id=\"{{id}}\" data-tab-category-url=\"{{concat url ../../data-sort-tab}}\">\n                            <div class=\"loadingOverlay\"></div>\n                            <div class=\"productCarousel\"></div>\n                        </div>\n                    {{/if}}\n                {{/each}}\n            </div>\n        </div>\n    </div>\n</div>\n{{{region name=\"home_below_products_tab_by_category\"}}}\n"
}