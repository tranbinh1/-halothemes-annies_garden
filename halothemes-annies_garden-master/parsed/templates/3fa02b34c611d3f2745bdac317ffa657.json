{
  "components/products/add-to-cart": "<div class=\"alertBox productAttributes-message\" style=\"display:none\">\n    <div class=\"alertBox-column alertBox-icon\">\n        <icon glyph=\"ic-success\" class=\"icon\" aria-hidden=\"true\"><svg xmlns=\"http://www.w3.org/2000/svg\" width=\"24\" height=\"24\" viewBox=\"0 0 24 24\"><path d=\"M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z\"></path></svg></icon>\n    </div>\n    <p class=\"alertBox-column alertBox-message\"></p>\n</div>\n\n<div class=\"productView-actions\">\n    {{#if theme_settings.show_product_quantity_box}}\n        <div class=\"form-field form-field--increments\">\n            <label class=\"form-label form-label--alternate\" for=\"qty[]\">{{lang 'products.quantity'}}</label>\n            <div class=\"form-increment\" data-quantity-change>\n                <input class=\"form-input form-input--incrementTotal\"\n                    id=\"qty[]\"\n                    name=\"qty[]\"\n                    type=\"number\"\n                    value=\"{{#if product.min_purchase_quantity}}{{product.min_purchase_quantity}}{{else}}1{{/if}}\"\n                    data-quantity-min=\"{{product.min_purchase_quantity}}\"\n                    data-quantity-max=\"{{product.max_purchase_quantity}}\"\n                    min=\"1\"\n                    pattern=\"[0-9]*\"\n                    aria-live=\"polite\">\n            </div>\n        </div>\n    {{/if}}\n\n    {{#or customer (if theme_settings.restrict_to_login '!==' true)}}\n        <div class=\"form-action{{#unless theme_settings.show_product_quantity_box}} form-action2{{/unless}}\">\n            <input id=\"form-action-addToCart\" data-form-action-addToCart data-wait-message=\"{{lang 'products.adding_to_cart'}}\" class=\"button button--primary\" type=\"submit\" value=\"{{#if product.pre_order}}{{lang 'products.pre_order'}}{{else}}{{lang 'products.add_to_cart'}}{{/if}}\">\n        </div>\n    {{else}}\n        <div class=\"form-action{{#unless theme_settings.show_product_quantity_box}} form-action2{{/unless}}\">\n            <span class=\"form-action-text\">\n                <svg class=\"icon\"><use xlink:href=\"#icon-info2\"></use></svg>\n                <span class=\"text\">{{lang 'common.restrict_to_login2'}}</span>\n            </span>\n        </div>\n    {{/or}}\n</div>\n{{#or customer (if theme_settings.restrict_to_login '!==' true)}}\n    {{#if theme_settings.halo_buy_it_now}}\n        <div class=\"productView-actions productView-actions--buyItNow\">\n            <div class=\"form-action form-action--buyItNow\">\n                <input id=\"form-action-buyItNow\" data-wait-message=\"{{lang 'products.adding_to_cart'}}\" class=\"button button--buyItNow\" type=\"submit\"\n                value=\"{{lang 'products.buy_it_now'}}\">\n            </div>\n        </div>\n    {{/if}}\n{{/or}}\n"
}